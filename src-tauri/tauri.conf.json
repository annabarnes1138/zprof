{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "zprof",
  "identifier": "com.zprof.app",
  "version": "0.2.0",
  "build": {
    "beforeDevCommand": "cd src-ui && npm run dev",
    "beforeBuildCommand": "cd src-ui && npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../src-ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "zprof - Zsh Profile Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 960,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "deb", "appimage"]
  }
}
